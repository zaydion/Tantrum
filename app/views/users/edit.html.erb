<div class="col-md-6 col-sm-offset-2">
<h1>Update Your Profile</h1>
</div>

<div class="sign_up">
<%= form_for @user do | f | %>
	<%= f.label :name %><br/>
	<%= f.text_field :name %>
	<br/>
	<%= f.label :email %><br/>
	<%= f.email_field :email %>
	<br/>
	<%= f.label :password %><br/>
	<%= f.password_field :password %>
	<br/>
	<%= f.label :password_confirmation %><br/>
	<%= f.password_field :password_confirmation %>
	<br/>
	<%= f.submit "Update profile", :class => "submit_btn" %>
	<% end %>

</div>

 